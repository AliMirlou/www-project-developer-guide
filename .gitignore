# uses allow-list, so ignore everything
*

# allow github, workflows and templates
!.github/
!.github/*.yaml
!.github/issue_template/
!.github/issue_template/*.md
!.github/workflows/
!.github/workflows/*.yaml
!.gitignore
!.lintcheck.yaml
!.lycheeignore
!.markdownlint.yaml
!.spellcheck.yaml
!.wordlist.txt

# allow jekyll build files
!404.html
!_config.yml
!_data/
!_data/*.yaml
!_includes/
!_includes/*.html

# draft version
!draft/
!draft/title*.yaml
!draft/0*/
!draft/0*/*.md
!draft/0*/0*/
!draft/0*/0*/*.md
!draft/0*/1*/
!draft/0*/1*/*.md
!draft/1*/
!draft/1*/*.md
!draft/1*/0*/
!draft/1*/0*/*.md
!draft/1*/1*/
!draft/1*/1*/*.md
!draft/assets/
!draft/assets/images/
!draft/assets/images/*.png

# release version
!release/
!release/title*.yaml
!release/0*/
!release/0*/*.md
!release/0*/0*/
!release/0*/0*/*.md
!release/0*/1*/
!release/0*/1*/*.md
!release/1*/
!release/1*/*.md
!release/1*/0*/
!release/1*/0*/*.md
!release/1*/1*/
!release/1*/1*/*.md
!release/assets/
!release/assets/images/
!release/assets/images/*.png

# pages markdown
!*.md
!assets/
!assets/exports/
!assets/exports/*.epub
!assets/exports/*.pdf
!assets/images/
!assets/images/*.png
!license.txt

